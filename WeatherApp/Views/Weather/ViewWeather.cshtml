@model WeatherModel

@{
    ViewData["Title"] = "Home Page";
}

<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link href="~/css/weathertable.css" rel="stylesheet" />

<!----- Weather table result ---->
<div class="content" style="top:53%;">

    <table>
        <caption style="font-weight:bold;color:white">Location</caption>
        <tbody>
            <tr>
                <td data-label="Country">@Model.Country</td>
                <td data-label="City">@Model.city</td>
                <td data-label="Region">@Model.Region</td>
                <td data-label="Time Zone">@Model.Timezone_id</td>
            </tr>
        </tbody>
    </table>

    <table>
        <caption style="font-weight:bold;color:white">Temperature</caption>
        <tbody>
            <tr>
                <td data-label="Temperature">@Model.temperature</td>
                <td data-label="Condition">@Model.condition</td>
                <td data-label="Humidity">@Model.atmosphere</td>
            </tr>
        </tbody>
    </table>
</div>



