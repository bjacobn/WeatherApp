@model RegisterModel


<link href="~/css/forms.css" rel="stylesheet" />


<!-----------------------Register-------------->

<div class="content form_inner">
    <div class="container">
        <div class="card form_bg">
            <div class="card_title">
                <h1 style="color:whitesmoke;">Create Account</h1>
                <p><span class="redirect">Already have an account? <a href="Login">Sign In</a></span><p>
            </div>
            <div class="form">

                @using (Html.BeginForm("InsertUserToDatabase", "User", "Post"))
                {

                    <input type="text" name="FirstName" id="FName" asp-for="FirstName" placeholder="First Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>

                    <input type="text" name="LastName" id="LName" placeholder="Last Name" asp-for="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>

                    <input type="text" name="Email" placeholder="Email" id="email" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>

                    <input type="password" name="Password" placeholder="Password" id="password" />
                    <span class="text-danger" asp-validation-for="Password"></span>

                    <input type="password" name="ConfirmPassword" placeholder="Confirm Password" id="confirmpassword" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

                    <input type="submit" style="background-color:dodgerblue;color:white;" value="Sign Up" />


                    //Data succesfully stored in database
                    @if (ViewBag.Message == "Success")
                    {
                        <p style="color: green; font-size:medium;font-weight:bold">Account created successfully!</p>
                    }


                    //Data failed to store in database
                    @if (ViewBag.Message == "Error")
                    {
                        <p style="color: red; font-size:medium;font-weight:bold">Signup failed , please try again.</p>
                    }
                }

            </div>
        </div>
    </div>
</div>


